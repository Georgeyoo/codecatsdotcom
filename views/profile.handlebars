<div class="container-fuid">
    <div class="col-md-12">
      <div class="panel panel-default panel-profile m-b-sm" id="profile-box">
        <div class="panel-heading" id="profile-bg" style:"background-color: {{user.backgrondColor}}"></div>
        <div class="panel-body text-center">
          <a href="/profile/:{{user.id}}">
            
            <img class="panel-profile-img" src="{{profileImgUrl}}">
          
          </a>
          <h3 class="panel-title">
            <a class="text-inherit" href="/profile/:{{user.id}}">{{user.firstName}} {{user.lastName}}</a>
          </h3>
          <ul class="panel-menu">
          <li class="panel-menu-item">
            <div class="entry">
              {{#if user.GitHubUrl}}
                <h1>{{user.GithubUrl}}</h1>
              {{/if}}
              {{#if user.StackOverFlowUrl}}
                <h1>{{user.StackOverFlowUrl}}</h1>
              {{/if}}
              {{#if user.LinkedInUrl}}
                <h1>{{user.LinkedInUrl</h1>
              {{/if}}
              {{#if user.FacebookUrl}}
                <h1>{{user.FacebookUrl</h1>
              {{/if}}
            </div>
          </li>
        </ul>
        </div>
    </div>
</div>


