  <div class="col-md-9">

    <ul class="list-group media-list media-list-stream">

      <li class="media list-group-item p-a">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Message">
          <div class="input-group-btn">
            <button type="button" class="btn btn-default">
              <span class="glyphicon glyphicon-plus"></span>
            </button>
          </div>
        </div>
      </li>
    
      {{#posts}}
      <li class="media list-group-item p-a">
        <a class="media-left" href="/profile/{{UserId}}">
          <img class="media-object img-circle" src="http://via.placeholder.com/60x60">
        </a>
        <div class="media-body">
          <div class="media-heading">
            <h5>{{User.firstName}} {{User.lastName}} <small class="pull-right text-muted">{{createdAt}}</small></h5>
          </div>
          <p>
            {{body}}
          </p>
            
        <ul class="media-list m-b">
          {{#posts.Comments}}
          <li class="media">
            <a class="media-left" href="/profile/{{UserId}}">
              <img class="media-object img-circle" src="http://via.placeholder.com/40x40">
            </a>
            <div class="media-body">
                <h6>{{User.firstName}} {{User.lastName}} <small class="pull-right text-muted">{{createdAt}}</small></h6>
                <p>
                  {{body}}
                </p>
            </div>
          </li>
          {{/posts.Comments}}
          <li class="media list-group-item p-a-2">
            <div class="input-group">
              <input type="text" class="form-control" id="comment-body" data-postid="{{id}}" placeholder="Message">
              <div class="input-group-btn">
                <button type="button" class="btn btn-default" id="comment-submit">
                  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                </button>
              </div>
            </div>
          </li>
        </ul>
        </div>
      </li>
      {{/posts}}
    </ul>
