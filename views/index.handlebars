<script type="text/javascript">
var userId;

$(document).ready(function() {
  if (!userId) {
    $.ajax({
      url: "/auth/getuser",
      type: "GET"
    }).done(function(result) {
      console.log(result);
      userId = result.id;
      $("#my-profile-img").attr("src", result.profileImgUrl);
    });
  }
});

</script>